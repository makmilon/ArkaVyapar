<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="50dp"
    android:background="@drawable/receive_msg_bg">

    <TextView
        android:id="@+id/notification"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:hint="@string/message"
        android:maxLines="50"
        android:padding="10dp"
        android:textColor="#AE634C"
        android:textColorHint="#AE634C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.807"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date_Noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="1dp"
        android:text="date"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.834"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="18dp"
        android:layout_height="17dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/date_Noti"
        app:layout_constraintStart_toEndOf="@+id/date_Noti"
        app:layout_constraintTop_toTopOf="@+id/date_Noti"
        app:srcCompat="@drawable/double_check" />


</androidx.constraintlayout.widget.ConstraintLayout>